<!DOCTYPE html>
<html lang="en">
  <head>
      <title>Weather</title>
    {{>headerlinks}}
      </head>
  <body>
   {{>navbar}}
      <!-- main header -->
      <div class="container-fluid main_header">
        <div class="row">
          <div class="col-md-10 col-12 mx-auto">
            <div class="main_content">
                <form class="temp_form">
                    <input type="text" id="cityname"placeholder="Enter your city name"autocomplete="off">
                    <input type="submit" value="Search" id="submitbutton">
                </form>
            </div>
            <div class="tempinformation">
                <div class="top_layer">
                    <p id="day"> Tuesday</p>
                    <p id="today_date">01 March</p>
                </div>
                <div class="main_layer">
                    <p id="city_name">Find your city above.</p>
                    <div class="middle_layer data_hide">
                        <p ><span id="temp">0</span><sup>o</sup>C</p>
                        <p id="templogo">
                            <i class="fa fa-cloud" aria-hidden="true"></i>
                        </p>
                    </div>
                </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    {{>footer}}
    <script src="js/main.js"></script>
  </body>
</html>
